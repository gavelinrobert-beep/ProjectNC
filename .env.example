# ========================================
# Project SYLON - Civil Logistics Platform
# Environment Configuration Template
# ========================================
# 
# Copy this file to .env and configure for your deployment
# This platform is designed for municipalities, contractors, and civil defense organizations
#

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres

# ========================================
# Security Configuration
# ========================================
# JWT Secret Key - MUST be changed in production!
# Generate a secure key: openssl rand -hex 32
JWT_SECRET=dev-secret-change-in-production

# JWT Token Expiration (in minutes)
# Default: 240 minutes (4 hours)
JWT_EXP_MIN=240

# ========================================
# CORS Configuration
# ========================================
# Allowed origins for CORS (comma-separated)
# For development: http://localhost:5173,http://localhost:3000
# For production: https://yourdomain.com
CORS_ORIGINS=http://localhost:5173

# ========================================
# API Configuration
# ========================================
# Base URL for the API (used by frontend)
VITE_API_BASE=http://localhost:8000

# ========================================
# External Services (Optional)
# ========================================
# OpenWeather API Key for weather data
# Get your free API key at: https://openweathermap.org/api
# Leave empty to disable weather features
OPENWEATHER_API_KEY=

# ========================================
# Map Configuration (Optional)
# ========================================
# Mapbox Access Token for enhanced map features
# Get your token at: https://www.mapbox.com/
# Leave empty to use OpenStreetMap (default)
VITE_MAPBOX_TOKEN=

# ========================================
# Application Settings
# ========================================
# Default map center coordinates [latitude, longitude]
# Sweden default: 62.3901, 17.3062
VITE_DEFAULT_MAP_CENTER=62.3901,17.3062

# Default map zoom level (1-18)
VITE_DEFAULT_MAP_ZOOM=6

# ========================================
# Feature Flags
# ========================================
# Enable/disable features for different deployment types
VITE_ENABLE_WEATHER=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_EXPORTS=true
VITE_ENABLE_FIELD_REPORTS=true

# ========================================
# Deployment Configuration
# ========================================
# Node environment (development, production, test)
NODE_ENV=development

# Port Configuration
API_PORT=8000
FRONTEND_PORT=5173
DB_PORT=5432

# ========================================
# Logging & Monitoring
# ========================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed error messages (disable in production)
DEBUG_MODE=false

# ========================================
# Backup & Data Retention
# ========================================
# Days to retain historical data
DATA_RETENTION_DAYS=90

# Enable automatic database backups
ENABLE_AUTO_BACKUP=true

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
