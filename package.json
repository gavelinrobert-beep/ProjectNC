{
  "name": "fantasy-mmorpg-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "A scalable fantasy MMORPG with Node.js API, Next.js frontend, and Go game server",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "bash setup.sh",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File setup.ps1",
    "predev:api": "node scripts/check-dependencies.js api",
    "dev:api": "npm run start:dev --prefix packages/api",
    "predev:frontend": "node scripts/check-dependencies.js frontend",
    "dev:frontend": "npm run dev --prefix packages/frontend",
    "dev:gameserver": "node scripts/run-gameserver.js",
    "build:api": "npm run build --prefix packages/api",
    "build:frontend": "npm run build --prefix packages/frontend",
    "build:gameserver": "node scripts/build-gameserver.js",
    "install:all": "npm install && npm install --prefix packages/api && npm install --prefix packages/frontend && npm install --prefix packages/shared",
    "preprisma:migrate": "node scripts/check-database-ready.js",
    "prisma:migrate": "npm run prisma:migrate --prefix packages/api",
    "prisma:generate": "npm run prisma:generate --prefix packages/api",
    "prisma:studio": "npm run prisma:studio --prefix packages/api",
    "docker:db:start": "docker compose up -d postgres",
    "docker:db:stop": "docker compose stop postgres",
    "docker:db:restart": "docker compose restart postgres",
    "docker:db:logs": "docker compose logs -f postgres",
    "docker:db:reset": "docker compose down -v && docker compose up -d postgres"
  },
  "keywords": [
    "mmorpg",
    "game",
    "nestjs",
    "nextjs",
    "golang",
    "websocket",
    "prisma"
  ],
  "author": "",
  "license": "MIT"
}
